<%- include('partials/header') -%>

<main class="container text-light vh-100" style="background-color: #2c2c32"">
  <div class="row justify-content-center">
    <section class="col-6 mt-5">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <h1>Log In</h1>
      <form action="/login" method="POST">
              <div class="form-group">
                <label for="exampleInputEmail1" class="text-muted mb-1"
                  >Email address</label>
                <input
                  type="email"
                  class="form-control"
                  id="exampleInputEmail1"
                  aria-describedby="emailHelp"
                  name="email"
                  placeholder="you@example.com"
                />
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1" class="text-muted mb-1">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="exampleInputPassword1"
                  name="password"
                  placeholder="********"
                />
              </div>
              <div class ="d-grid">
                <button type="submit" class="py-3 mt-4 btn btn-lg btn-danger btn-block">Log In</button>
              </div>
            </form>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
