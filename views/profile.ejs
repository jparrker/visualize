<%- include('partials/header') -%>
<div class="container feed rounded-3 text-light  px-4" style="background-color: #2c2c32"">
  <div class="row justify-content-center mt-5">
      <div class="row list-unstyled mt-5">

        <div>
          <p><strong>User Name</strong>: <%= user.userName %></p>
          <p><strong>Email</strong>: <%= user.email %></p>
        </div>

        <% if (paramsID == user.id) { %>
        <div class="container-md  mt-5 mb-3 p-3 p-3 card text-light w-75" style="background-color:#424242">
          <h2>Add a post</h2>
          <form action="/post/createPost" enctype="multipart/form-data" method="POST" >
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Please write a Title">
            </div>
            <div class="mb-3">
              <label for="caption" class="form-label">Caption</label>
              <textarea class="form-control" id="caption" name="caption" placeholder="Please write a caption"></textarea>
            </div>
            <div class="mb-3">
              <label for="imgUpload" class="form-label">Image</label>
              <input type="file" class="form-control" id="imageUpload" name="file">
            </div>
            <button type="submit" class="btn btn-danger" value="Upload">Submit</button>
          </form>
        </div>
        <% } %>

      </div>
      <div class="container pb-3">
        <ul class="row list-unstyled">
        <% for(let i = 0; i<posts.length; i++) { %>
          <li class="col-12 col-6 col-md-4 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="feed-img rounded mx-auto d-block img-fluid img-thumbnail " src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <!-- <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>   -->
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>